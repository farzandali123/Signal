<resources>

    <!-- Base Application Theme -->
    <style name="Theme.Signal" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:navigationBarColor">@color/darkGray</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:popupMenuStyle">@style/CustomPopupMenu</item>
    </style>

    <!-- Light Theme Variation -->
    <style name="Theme.Signal.Light" parent="Theme.Signal">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:statusBarColor">@color/purple_200</item>
    </style>

    <!-- Dark Theme Variation -->
    <style name="Theme.Signal.Dark" parent="Theme.Signal">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:statusBarColor">@color/purple_700</item>
    </style>

    <!-- Custom Popup Menu Style -->
    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">#303030</item>
        <item name="android:background">#1C1C1C</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Font Size Variations -->
    <style name="Theme.Signal.SmallFont" parent="Theme.Signal">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.Signal.NormalFont" parent="Theme.Signal">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Signal.LargeFont" parent="Theme.Signal">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Signal.ExtraLargeFont" parent="Theme.Signal">
        <item name="android:textSize">22sp</item>
    </style>

</resources>
