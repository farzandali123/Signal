<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1c1c1c"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Section: Phone Number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose who can see your phone number and who can contact you on Signal with it."
            android:textColor="#BBBBBB"
            android:textSize="14sp"
            android:paddingBottom="16dp" />

        <!-- Section: Blocked Contacts -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blocked"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 contacts or groups"
            android:textColor="#BBBBBB"
            android:textSize="14sp"
            android:paddingBottom="16dp" />

        <!-- Section: Messaging -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Messaging"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingTop="16dp" />

        <!-- Switch for Read Receipts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:paddingBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Read receipts"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/switchReadReceipts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Switch for Typing Indicators -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:paddingBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Typing indicators"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/switchTypingIndicators"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Section: Disappearing Messages -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disappearing Messages"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default timer for new chats"
            android:textColor="#BBBBBB"
            android:textSize="14sp"
            android:paddingBottom="16dp" />

        <!-- Section: App Security -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Security"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:paddingBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Screen lock"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/switchScreenLock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Section: Payments -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payments"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:paddingBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Payment lock"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/switchPaymentLock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Section: Advanced -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advanced"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signal messages and calls, always relay calls"
            android:textColor="#BBBBBB"
            android:textSize="14sp"
            android:paddingBottom="16dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
