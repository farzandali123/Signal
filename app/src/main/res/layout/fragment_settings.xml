<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1c1c1c">

    <!-- Back Button -->
    <TextView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt; Back"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center" />

    <!-- User Info Section -->
    <LinearLayout
        android:id="@+id/userInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/settingsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/profile"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Farzand Ali"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/userPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+92 310 4324864"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Settings Options List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/userInfoLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Account -->
        <TextView
            android:id="@+id/accountOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textColor="@android:color/white"
            android:drawablePadding="12dp"
            android:paddingVertical="12dp" />

        <!-- Linked Devices -->
        <TextView
            android:id="@+id/linkedDevicesOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Linked Devices"
            android:textColor="@android:color/white"
            android:drawablePadding="12dp"
            android:paddingVertical="12dp" />

        <!-- Donate to Signal -->
        <TextView
            android:id="@+id/donateOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Donate to Signal"
            android:textColor="@android:color/white"
            android:drawablePadding="12dp"
            android:paddingVertical="12dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#444444"
            android:layout_marginVertical="8dp" />

        <!-- Appearance -->
        <TextView
            android:id="@+id/appearanceOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appearance"
            android:textColor="@android:color/white"
            android:drawablePadding="12dp"
            android:paddingVertical="12dp" />

        <!-- Chats -->
        <TextView
            android:id="@+id/chatsOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chats"
            android:textColor="@android:color/white"
            android:drawablePadding="12dp"
            android:paddingVertical="12dp" />

        <!-- Stories -->
        <TextView
            android:id="@+id/storiesOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stories"
            android:textColor="@android:color/white"
            android:drawablePadding="12dp"
            android:paddingVertical="12dp" />

        <!-- Notifications -->
        <TextView
            android:id="@+id/notificationsOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textColor="@android:color/white"
            android:drawablePadding="12dp"
            android:paddingVertical="12dp" />

        <!-- Privacy -->
        <TextView
            android:id="@+id/privacyOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy"
            android:textColor="@android:color/white"
            android:drawablePadding="12dp"
            android:paddingVertical="12dp" />

        <!-- Data and Storage -->
        <TextView
            android:id="@+id/dataAndStorageOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data and Storage"
            android:textColor="@android:color/white"
            android:drawablePadding="12dp"
            android:paddingVertical="12dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
