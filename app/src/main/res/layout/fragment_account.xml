<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1c1c1c"
    android:padding="16dp">

    <!-- Back Button -->
    <TextView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/accountTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center" />

    <!-- Account Options Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/accountTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Signal PIN"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingVertical="12dp" />

        <!-- Change your PIN option -->
        <TextView
            android:id="@+id/changePinTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change your PIN"
            android:textColor="#888888"
            android:paddingVertical="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PIN reminders"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingVertical="12dp" />

        <!-- Switch for PIN reminders -->
        <Switch
            android:id="@+id/pinRemindersSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration Lock"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingVertical="12dp" />

        <!-- Switch for Registration Lock -->
        <Switch
            android:id="@+id/registrationLockSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Advanced PIN settings"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingVertical="12dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#444444"
            android:layout_marginVertical="8dp" />

        <!-- Account Actions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingVertical="12dp" />

        <!-- Change phone number option -->
        <TextView
            android:id="@+id/changePhoneNumberTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change phone number"
            android:textColor="#888888"
            android:paddingVertical="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transfer account"
            android:textColor="#888888"
            android:paddingVertical="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your account data"
            android:textColor="#888888"
            android:paddingVertical="12dp" />

        <!-- Delete Account option -->
        <TextView
            android:id="@+id/deleteAccountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete account"
            android:textColor="#FF0000"
            android:paddingVertical="12dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
