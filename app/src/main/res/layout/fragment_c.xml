<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1c1c1c"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title Bar with Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt; Back"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chats"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Generate Link Previews Option -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate link previews"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Retrieve link previews directly from websites for messages you send."
            android:textColor="#A9A9A9"
            android:textSize="14sp"
            android:paddingBottom="8dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:checked="true"
            android:thumbTint="@android:color/white"
            android:trackTint="@color/darkGray"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:paddingTop="16dp"/>

        <!-- Use Address Book Photos Option -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use address book photos"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display contact photos from your address book if available"
            android:textColor="#A9A9A9"
            android:textSize="14sp"
            android:paddingBottom="8dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:thumbTint="@android:color/white"
            android:trackTint="@color/darkGray"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:paddingTop="16dp"/>

        <!-- Keep Muted Chats Archived Option -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keep Muted Chats Archived"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muted chats that are archived will remain archived when a new message arrives."
            android:textColor="#A9A9A9"
            android:textSize="14sp"
            android:paddingBottom="8dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:thumbTint="@android:color/white"
            android:trackTint="@color/darkGray"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:paddingTop="16dp"/>

        <!-- Keyboard Options -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keyboard"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use system emoji"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:thumbTint="@android:color/white"
            android:trackTint="@color/darkGray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send with enter"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:thumbTint="@android:color/white"
            android:trackTint="@color/darkGray"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:paddingTop="16dp"/>

        <!-- Backups Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Backups"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:paddingTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chat backups"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:paddingTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disabled"
            android:textColor="#A9A9A9"
            android:textSize="14sp"
            android:paddingBottom="8dp" />

    </LinearLayout>

</ScrollView>
