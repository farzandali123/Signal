<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#2d2d2d" /> <!-- Background color -->
            <corners android:radius="8dp" />  <!-- Rounded corners -->
            <stroke android:width="1dp" android:color="#888888" /> <!-- Border color -->
        </shape>
    </item>

    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#1c1c1c" /> <!-- Disabled background color -->
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#555555" /> <!-- Disabled border color -->
        </shape>
    </item>
</selector>
